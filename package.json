{
  "name": "practice-next-ec",
  "version": "0.1.0",
  "private": true,
  "description": "A practice project for building an e-commerce site using Next.js",
  "homepage": "https://github.com/lc-semba-ryuichiro/practice-next-ec#readme",
  "bugs": {
    "url": "https://github.com/lc-semba-ryuichiro/practice-next-ec/issues"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/lc-semba-ryuichiro/practice-next-ec.git"
  },
  "license": "MIT",
  "author": "Ryuichiro Semba",
  "sideEffects": [
    "**/*.css"
  ],
  "type": "module",
  "scripts": {
    "build": "turbo run build",
    "build-storybook": "storybook build",
    "clean": "turbo run clean",
    "dev": "turbo run dev",
    "fix": "run-s fix:prettier fix:eslint fix:stylelint",
    "fix:eslint": "turbo run lint -- --fix",
    "fix:prettier": "prettier --write .",
    "fix:remark": "remark . --output",
    "fix:stylelint": "stylelint \"**/*.css\" --fix",
    "fix:textlint": "textlint --fix \"**/*.md\"",
    "preinstall": "npx only-allow pnpm",
    "lint": "turbo run lint",
    "lint:browserslist": "browserslist",
    "lint:prettier": "prettier --check .",
    "lint:remark": "remark . --quiet",
    "lint:secretlint": "secretlint \"**/*\"",
    "lint:stylelint": "stylelint \"**/*.css\"",
    "lint:textlint": "textlint \"**/*.md\"",
    "prepare": "lefthook install",
    "storybook": "storybook dev -p 6006",
    "test": "turbo run test",
    "test:a11y": "A11Y_TEST=true test-storybook --url http://127.0.0.1:6006",
    "test:a11y:ci": "concurrently -k -s first -n 'SB,TEST' -c 'magenta,blue' 'http-server storybook-static -p 6006 --silent' 'wait-on tcp:6006 && pnpm test:a11y'",
    "test:coverage": "vitest --coverage",
    "test:e2e": "playwright test",
    "test:ui": "vitest --ui",
    "typecheck": "turbo run typecheck",
    "vrt:build": "storybook build",
    "vrt:chromatic": "chromatic --project-token=$CHROMATIC_PROJECT_TOKEN",
    "vrt:chromatic:ci": "chromatic --project-token=$CHROMATIC_PROJECT_TOKEN --exit-zero-on-changes",
    "vrt:local": "pnpm vrt:build && pnpm vrt:storycap:ci && pnpm vrt:reg:compare",
    "vrt:lostpixel": "lost-pixel",
    "vrt:lostpixel:update": "lost-pixel update",
    "vrt:reg": "reg-suit run",
    "vrt:reg:compare": "reg-suit compare",
    "vrt:storycap": "test-storybook --url http://127.0.0.1:6006",
    "vrt:storycap:ci": "concurrently -k -s first -n 'SB,TEST' -c 'magenta,blue' 'http-server storybook-static -p 6006 --silent' 'wait-on tcp:6006 && pnpm vrt:storycap'"
  },
  "devDependencies": {
    "@axe-core/playwright": "catalog:",
    "@chromatic-com/storybook": "catalog:",
    "@commitlint/cli": "catalog:",
    "@commitlint/config-conventional": "catalog:",
    "@playwright/test": "catalog:",
